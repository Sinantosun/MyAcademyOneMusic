<div class="one-music-songs-area mt-70 mb-70">
    <div class="container">
        <div class="row">

            @if (Model.Count > 0)
            {
                <div class="col-12">
                    @foreach (var item in Model)
                    {
                        <div class="single-song-area mb-30 d-flex flex-wrap align-items-center">

                            <div class="song-play-area">
                                <div class="song-name">
                                    <p>@item.SongName</p>
                                </div>
                                <audio preload="auto" controls>
                                    <source src="@item.SongUrl">
                                </audio>
                            </div>
                        </div>
                    }

                </div>
            }
            else
            {
                <div class="alert alert-danger">Sanatçı bu albüme henüz şarkı eklemesi yapmamış.</div>
            }

          

        </div>
    </div>
</div>



