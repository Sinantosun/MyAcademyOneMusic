@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h1>Hakkımızda Alanı</h1>


<table class="table table-hover table-bordered">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Başlık</td>
        <td>Açıklama</td>
        <td>İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; " /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a asp-action="DeleteAbout" asp-route-id="@item.AboutId" class="btn btn-outline-danger">Sil</a></td>
            <td><a asp-action="UpdateAbout" asp-route-id="@item.AboutId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a asp-action="CreateAbout" class="btn btn-outline-success">Yeni Alan Ekle</a>