@model CreateSingerModel
@{
    ViewData["Title"] = "CreateSinger";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Yeni Şarkıcı Ekleme Sayfası</h1>
<br />

<form method="post" enctype="multipart/form-data">
    @Html.Label("Albüm Görsel")
    <input type="file" asp-for="Image" class="form-control" />
    <span class="text-danger" asp-validation-for="Image"></span>
    <br />
    @Html.Label("Şarkıcı Adı")
    <input type="text" asp-for="Name" class="form-control" />
    <span class="text-danger" asp-validation-for="Name"></span>
    <br />
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>