@model Singer
@{
    ViewData["Title"] = "UpdateSinger";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Şarkıcı Güncelleme Sayfası</h1>
<br />

<form method="post">
    <input type="hidden" asp-for="SingerId" class="form-control" />
    @Html.Label("Görsel")
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    @Html.Label("Şarkıcı Adı")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>