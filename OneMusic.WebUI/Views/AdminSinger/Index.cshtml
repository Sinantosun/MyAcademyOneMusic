@model List<Singer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h1>Şarkıcılar Alanı</h1>


<table class="table table-hover table-bordered">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Şarkıcı Adı</td>
        <td class="text-center" colspan="2">İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; " /></td>
            <td>@item.Name</td>
            <td class="text-center"><button onclick="deleteSinger(@item.SingerId)" class="btn btn-outline-danger">Sil</button></td>
            <td class="text-center"><a asp-action="UpdateSinger" asp-route-id="@item.SingerId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a asp-action="CreateSinger" class="btn btn-outline-success">Yeni Şarkıcı Ekle</a>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteSinger(id) {
        Swal.fire({
            title: "Silmek İstediğinize Emin Misiniz ",
            text: "Bu işlemi Geri Alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil",
            cancelButtonColorText:"İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/AdminSinger/DeleteSinger/" + id;
            }
           
        });
    }
</script>