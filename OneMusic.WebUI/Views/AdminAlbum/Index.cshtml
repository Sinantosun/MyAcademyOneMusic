@model List<Album>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h1>Albümler</h1>
<br />


<table class="table table-hover table-bordered">
    <tr>
        <td>#</td>
        <td>Resim</td>
        <td>Albüm Adı</td>
        <td>Şarkıcı</td>
        <td>Fiyat</td>
        <td colspan="2">İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.CoverImage" style="height:75px; width:75px; " /></td>
            <td>@item.AlbumName</td>
            <td>@item.Singer.Name</td>
            <td>@item.Price ₺</td>
            <td><button onclick="deleteAlbum(@item.AlbumId)" class="btn btn-outline-danger">Sil</button></td>
            <td><a asp-action="UpdateAlbum" asp-route-id="@item.AlbumId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a asp-action="CreateAlbum" class="btn btn-outline-success">Yeni Albüm Ekle</a>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function deleteAlbum(id) {
        Swal.fire({
            title: "Silmek İstediğinize Emin Misiniz ",
            text: "Bu işlemi Geri Alamazsınız",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil",
            cancelButtonColorText: "İptal",
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/AdminAlbum/DeleteAlbum/" + id;
            }

        });
    }
</script>