<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>OneMusic Giriş Ekranı</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Templates/colorlib-regform-21/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/Templates/colorlib-regform-21/css/style.css">
</head>

<body>

    <div class="wrapper">
        <div class="inner">
            <form method="post">
                <h3>OneMusic Şifre Sıfırlama</h3>
                <div class="form-wrapper">
                    <label class="label-input">Şifreniz</label>
                    <input type="password" name="pwd" class="form-control">
                </div>
                <div class="form-wrapper">
                    <label class="label-input">Şifreniz Tekrar</label>
                    <input type="password" name="confrmpwd" class="form-control">
                </div>
                @if (ViewBag.Err != null)
                {
                    <div class="text-danger" style="text-align:center; color:red; font-weight:bold;">
                        @Html.Raw(ViewBag.Err)
                    </div>
                }
                <button>Sıfırla</button>
                <div style="color:red; margin-top:20px">
                    @Html.ValidationSummary()
                </div>
            </form>
            <div class="image-holder">
                <img src="~/Templates/colorlib-regform-21/images/registration-form-5.jpg" alt="">
            </div>
        </div>
    </div>

    <script src="~/Templates/colorlib-regform-21/js/jquery-3.3.1.min.js"></script>
    <script src="~/Templates/colorlib-regform-21/js/main.js"></script>
</body>
</html>
