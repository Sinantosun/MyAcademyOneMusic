@model List<Banner>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<h1>Banner Alanı</h1>
<br />


<table class="table table-hover table-bordered">
    <tr>
        <td>#</td>
        <td>Görsel</td>
        <td>Başlık</td>
        <td>Alt Başlık</td>
        <td>Görsel</td>
        <td colspan="2">İşlemler</td>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; " /></td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td><button onclick="deleteBanner(@item.BannerId)" class="btn btn-outline-danger">Sil</button></td>
            <td><a asp-action="UpdateBanner" asp-route-id="@item.BannerId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>


<a asp-action="CreateBanner" class="btn btn-outline-success">Yeni Banner Ekle</a>
<br />

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>

    function deleteBanner(id) {
        Swal.fire({
            title: "Kayıt Silme Onayı",
            html: "Bu kaydı silmek istediğinize emin misiniz? <br><b> bu işlem geri alanımaz.</b>",
            icon: "info",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Sil",
            cancelButtonText: "Vazgeç"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/AdminBanner/DeleteBanner/" + id;
            }
            else {
                Toast.fire({
                    icon: "warning",
                    title: "Kayıt Silme işlemi iptal edildi."
                });
            }
        });
    }
</script>



